<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:id="@+id/userRelativeLayout">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Username"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/icon_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:src="@drawable/baseline_mail_outline_black_24dp" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_mail"
            android:layout_below="@+id/user_name"
            android:layout_toEndOf="@+id/icon_mail"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="User email"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/icon_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_mail"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_phone_black_24dp" />

        <TextView
            android:id="@+id/user_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_phone"
            android:layout_below="@+id/user_email"
            android:layout_toEndOf="@+id/icon_phone"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="User number"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/disableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/user_name"
            android:src="@drawable/right_circle_outline_black_36dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>